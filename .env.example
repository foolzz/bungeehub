# Environment Configuration
NODE_ENV=development
PORT=8080

# Database - Neon PostgreSQL
# Get your connection string from https://neon.tech
DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require

# Google Cloud Platform
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1

# Google Cloud Storage
GCS_BUCKET_NAME=bungeehub-media
GCS_CREDENTIALS_PATH=./gcp-key.json

# Redis - Cloud Memorystore
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Firebase
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRY=7d

# API Configuration
API_VERSION=v1
API_BASE_URL=http://localhost:8080/api

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Logging
LOG_LEVEL=debug  # debug, info, warn, error
LOG_FORMAT=json  # json, simple

# Email (if using SendGrid, SES, etc.)
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=noreply@bungiehub.com

# SMS (if using Twilio, etc.)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-for-signature-verification

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_ANALYTICS=true

# Development Tools
ENABLE_API_DOCS=true  # Swagger/OpenAPI docs
ENABLE_DEBUG_ROUTES=false
